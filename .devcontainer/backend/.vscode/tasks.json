{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Backend",
      "type": "shell",
      "command": "./mvnw",
      "args": ["-s", ".m2/settings.xml", "clean", "package", "-DskipTests"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "hide": true,
      "problemMatcher": []
    },
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "java",
      "args": ["-jar", "target/backend.jar"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "dependsOn": ["Build Backend"],
      "problemMatcher": []
    }
  ]
}
