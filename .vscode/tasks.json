{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Initialize",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh init"],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "(Pre)-Build",
      "group": "build",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh build"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": false
      },
      "hide": true
    },
    {
      "label": "Rebuild (Test)",
      "group": "build",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh rebuild"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": false
      },
      "hide": true
    },
    {
      "label": "Start - Production",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh start prod"],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "Start - Development",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh start code ${input:service}"],
      "problemMatcher": []
    },
    {
      "label": "Start - All",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh start"],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "Stop",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh stop"],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "Down",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh down"],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "bash ops.sh clean"],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "service",
      "type": "pickString",
      "description": "Select a service to start",
      "options": ["example", "backend", "frontend"]
    },
    {
      "id": "password",
      "type": "promptString",
      "description": "Enter sudo password",
      "default": "",
      "password": true
    }
  ]
}
