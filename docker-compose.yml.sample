services:
  mongo:
    image: mongo:latest
    # ports:
    #   - 27017:27017
    environment:
      MONGO_INITDB_ROOT_USERNAME: admin
      MONGO_INITDB_ROOT_PASSWORD: admin
    volumes:
      - ./db-mongodb:/data/db:delegated

  example:
    build:
      context: example
      dockerfile: Dockerfile
      target: example
    volumes:
      - ./example:/example
    ports:
      - 1234:1234
    working_dir: /example
    command: npm start
    # depends_on:
    #   - some-backend

  example-devcontainer:
    build:
      context: .devcontainer
      dockerfile: ../example/Dockerfile
      target: example-devcontainer
    volumes:
      - .:/workspaces/little-startup
      - /home/<host-username>/.ssh:/home/little/.ssh:cached
      - /home/<host-username>/.config/nvim:/home/little/.config/nvim:cached
    environment:
      - UV_LINK_MODE=copy
    command: sleep infinity
    depends_on:
      - mongo

  backend-devcontainer:
    build:
      context: .devcontainer/backend
      dockerfile: ../../backend/Dockerfile
      target: backend-devcontainer
    volumes:
      - .:/workspace/little-startup
      - /home/<host-username>/.ssh:/home/little/.ssh:cached
    depends_on:
      - mongo
    environment:
      - SPRING_DATA_MONGODB_URI=mongodb://admin:admin@mongo:27017
      - SPRING_PROFILES_ACTIVE=dev
    command: sleep infinity

  backend:
    build:
      context: backend
      dockerfile: Dockerfile
      target: backend
    ports:
      - 8080:8080
    depends_on:
      - mongo
    environment:
      - SPRING_DATA_MONGODB_URI=mongodb://admin:admin@mongo:27017
      - SPRING_PROFILES_ACTIVE=prod
    command: java -jar /app/target/backend.jar

  frontend:
    build:
      context: frontend
      dockerfile: Dockerfile
      target: frontend
    volumes:
      - ./frontend:/frontend
    ports:
      - 3000
    working_dir: /frontend
    command: npm start
    depends_on:
      - backend
  frontend-devcontainer:
    build:
      context: .devcontainer/frontend
      dockerfile: ../../frontend/Dockerfile
      target: frontend-devcontainer
    volumes:
      - .:/workspace/little-startup
      - /home/<host-username>/.ssh:/home/little/.ssh:cached
    command: sleep infinity
    depends_on: 
      - backend

